        cerr <<"exiting..." << endl;
        return EXIT_FAILURE;
    }*/
    //create GUI windows
    namedWindow("Frame");
    namedWindow("FG Mask MOG 2");

    //create Background Subtractor objects
    pMOG2 = createBackgroundSubtractorMOG2(); //MOG2 approach

    processVideo("back.avi","fore.avi");
    /*if(strcmp(argv[1], "-vid") == 0) {
        //input data coming from a video
